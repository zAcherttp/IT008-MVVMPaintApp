<UserControl x:Class="MVVMPaintApp.UserControls.ToolboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMPaintApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border>
            <StackPanel>
                <Button x:Name="Button_PencilTool" Content="Pencil" Click="Button_PencilTool_Click"/>
                <Button x:Name="Button_BrushTool" Content="Brush" Click="Button_BrushTool_Click"/>
                <Button x:Name="Button_EraserTool" Content="Eraser" Click="Button_EraserTool_Click"/>
                <Button x:Name="Button_FillTool" Content="Fill" Click="Button_FillTool_Click"/>
                <Button x:Name="Button_ColorPickerTool" Content="Color picker" Click="Button_ColorPickerTool_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
